menuconfig COMP_USING_LVGL
    bool "Enable LVGL"
    default n

if COMP_USING_LVGL

    config RT_LVGL_THREAD_PRIO
        int "Priority of LVGL thread"
        default 20

    config RT_LVGL_THREAD_STACK_SIZE
        int "Stack size of LVGL thread"
        default 8192

    config LV_DEF_REFR_PERIOD
        int "Default refresh period (ms)"
        default 33
        help
            Default display refresh, input device read and animation step period.

    config COMP_USING_LVGL_SQUARELINE
        bool "Support SquareLine Studio"
        default n

    config RT_LVGL_VER_NUM
        hex
        default 0x090100

    config RT_LVGL_VER
        string
        default "v9.1.0"

    # Define CONFIG_LV_CONF_SKIP so we can use LVGL
    # without lv_conf.h file, the lv_conf_internal.h and
    # lv_conf_kconfig.h files are used instead.
    config LV_CONF_SKIP
        bool
        default y

    menu "Color Settings"
        choice LV_COLOR_DEPTH
            prompt "Color depth"
            default COLOR_DEPTH_24
            help
                Color depth to be used.

            config COLOR_DEPTH_32
                bool "32: XRGB8888"
            config COLOR_DEPTH_24
                bool "24: RGB888"
            config COLOR_DEPTH_16
                bool "16: RGB565"
            config COLOR_DEPTH_8
                bool "8: RGB232"
            config COLOR_DEPTH_1
                bool "1: 1 byte per pixel"
        endchoice

        config LV_COLOR_DEPTH
            int
            default 1 if COLOR_DEPTH_1
            default 8 if COLOR_DEPTH_8
            default 16 if COLOR_DEPTH_16
            default 24 if COLOR_DEPTH_24
            default 32 if COLOR_DEPTH_32
    endmenu

endif

#-------------------------------------------------------------------------------
# End
